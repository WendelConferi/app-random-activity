<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/backinfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="20dp"
            android:text=""
            android:id="@+id/editAtividade"
            android:gravity="center"
            android:hint="Digite aqui"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="ImportÃ¢ncia"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="-10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                android:layout_width="101dp"
                android:layout_height="30dp"
                android:text="Pouco"
                android:id="@+id/check1"/>
            <CheckBox
                android:layout_width="101dp"
                android:layout_height="30dp"
                android:text="Mediano"
                android:id="@+id/check2"/>
            <CheckBox
                android:layout_width="101dp"
                android:layout_height="30dp"
                android:text="Muito"
                android:id="@+id/check3"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/btnrandom"
            android:id="@+id/btnAdicionar"
            android:text="Adicionar"
            android:gravity="center"/>

        </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/btnrandom"
            android:id="@+id/btnsortear"
            android:text="Sortear"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text=""
            android:textSize="30dp"
            android:id="@+id/txtSelecionado"
            android:gravity="center"
            android:textColor="@color/purple_200" />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>